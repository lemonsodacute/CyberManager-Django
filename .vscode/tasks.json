{
    // .vscode/tasks.json
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Run Redis Server",
            "type": "shell",
            "command": "& 'C:/Program Files/Redis/redis-server.exe' --port 6380",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "C:/Program Files/Redis"
            },
            "problemMatcher": []
        },
        {
            "label": "2. Run Django Runserver (Autoreload)",
            "type": "shell",
            "command": "python manage.py runserver 9000",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "3. Run Daphne (ASGI/WebSockets)",
            "type": "shell",
            "command": "daphne quanlynet.asgi:application -b 127.0.0.1 -p 8000",
            "group": "build",
            "dependsOn": [
                "1. Run Redis Server"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "4. Run Auto-Shutdown Worker",
            "type": "shell",
            // Lệnh runworker để chạy Worker Consumer của bạn
            "command": "python manage.py runworker quanly.routing.worker_urlpatterns --threads 1", 
            "group": "build",
            "dependsOn": [
                "1. Run Redis Server"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false // Không cần focus, chỉ cần chạy
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start All Services (Redis + Daphne + Django + Worker)",
            "dependsOn": [
                "1. Run Redis Server",
                "2. Run Django Runserver (Autoreload)",
                "3. Run Daphne (ASGI/WebSockets)",
                "4. Run Auto-Shutdown Worker" // <<< THÊM WORKER VÀO DEPENDS ON
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
    
}