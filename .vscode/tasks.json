{
    // .vscode/tasks.json
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Run Redis Server",
            "type": "shell",
            // ĐƯỜNG DẪN CẦN SỬA: Dùng cổng 6380
            "command": "E:/Redis/redis-server.exe --port 6380",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "E:/Redis"
            },
            "problemMatcher": []
        },
        {
            "label": "2. Run Daphne (ASGI/WebSockets)",
            "type": "shell",
            // Chạy Daphne trên cổng 8000
            "command": "daphne quanlynet.asgi:application -b 127.0.0.1 -p 8000",
            "group": "build",
            "dependsOn": ["1. Run Redis Server"],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "3. Run Django Runserver (Autoreload)",
    "type": "shell",
    "command": "python manage.py runserver 9000", // <<< LỆNH NÀY LÀ ĐÚNG
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start All Services (Redis + Daphne + Django)",
            "dependsOn": ["1. Run Redis Server", "2. Run Daphne (ASGI/WebSockets)", "3. Run Django Runserver (Autoreload)"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
    
}